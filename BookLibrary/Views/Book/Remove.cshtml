@model BookLibrary.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Delete Book";
}

<h2>Delete Book</h2>

<form asp-action="Remove" method="post">
    @Html.AntiForgeryToken
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div>
        <p>Are you sure you want to delete the book with the following details?</p>
        <dl class="row">
            <dt class="col-sm-2">Title:</dt>
            <dd class="col-sm-10">@Model.Title</dd>

            <dt class="col-sm-2">Author:</dt>
            <dd class="col-sm-10">@Model.Author</dd>

            <dt class="col-sm-2">Publication Date:</dt>
            <dd class="col-sm-10">@Model.PublicationDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-2">Added By:</dt>
            <dd class="col-sm-10">@Model.UserName</dd>
        </dl>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
